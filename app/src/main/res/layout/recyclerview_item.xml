<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerviewitem_serialnumber"
        android:layout_centerVertical="true"
        android:text="1."
        android:textSize="15sp"
        android:textStyle="normal"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/recyclerviewitem_flagimage"
        android:layout_toRightOf="@id/recyclerviewitem_serialnumber"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_coronavirus"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerviewitem_countryname"
        android:layout_toRightOf="@id/recyclerviewitem_flagimage"
        android:text="country name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerviewitem_countrypopunlation"
        android:layout_alignParentRight="true"
        android:text="country name"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/black"
        android:layout_below="@id/recyclerviewitem_flagimage"
        android:layout_toRightOf="@id/recyclerviewitem_flagimage"/>
</RelativeLayout>